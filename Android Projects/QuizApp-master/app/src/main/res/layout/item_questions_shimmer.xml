<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="8dp"
    android:paddingHorizontal="16dp">

    <View
        android:id="@+id/vQuestionNumber"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:background="@color/shimmerLite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/vQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:background="@color/shimmerDark"
        app:layout_constraintStart_toEndOf="@id/vQuestionNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/shimmerLite"
        app:layout_constraintStart_toStartOf="@id/vQuestion"
        app:layout_constraintTop_toBottomOf="@id/vQuestion"/>

</androidx.constraintlayout.widget.ConstraintLayout>